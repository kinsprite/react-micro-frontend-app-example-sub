
.container {
  background-color: rgb(158, 131, 131);
  padding: 0.25rem;


  &:hover {
    background-color: rgb(75, 125, 138);
  }
}

.content {
  display: block;
  white-space: nowrap;
  border-right: 0 solid;
}

@keyframes typing {
  from {
    width: 0;
    border-right-width: 0.05em;
  }
  99% {
    width: 40ch;
    border-right-width: 0.05em;
  }
}

@keyframes caret {
  50% {
    border-color: transparent;
  }
}
